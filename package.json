{
  "name": "ress",
  "version": "2.0.1",
  "description": "A modern CSS reset",
  "author": "Filipe Linhares",
  "license": "MIT",
  "main": "dist/ress.min.css",
  "homepage": "https://github.com/filipelinhares/ress",
  "repository": {
    "type": "git",
    "url": "https://github.com/filipelinhares/ress.git"
  },
  "bugs": {
    "url": "https://github.com/filipelinhares/ress/issues"
  },
  "scripts": {
    "shadow": "postcss ./src/*.css -u cssnano --dir ./shadow --no-map",
    "inputs": "postcss ./src/input/*.css -u cssnano --dir ./shadow/input --no-map",
    "compile:shadow": "npm run shadow && npm run inputs",
    "compile": "postcss ress.css -u cssnano ---output dist/ress.min.css --no-map",
    "test": "stylelint ress.css ./src/"
  },
  "devDependencies": {
    "stylelint": "^11.0.0",
    "cssnano": "^4.1.10",
    "postcss-cli": "^6.1.3"
  }
}
